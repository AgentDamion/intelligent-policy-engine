# AICOMPLYR Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Supabase Configuration
SUPABASE_PROJECT_ID=your-project-id
SUPABASE_ACCESS_TOKEN=your-access-token
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Platform Credentials Encryption
PLATFORM_CREDENTIALS_SECRET=base64:your-32-byte-encryption-key

# Veeva Configuration
VEEVA_BASE_URL=https://your-instance.veevavault.com/api/v21.1
VEEVA_USERNAME=service-account@example.com
VEEVA_PASSWORD=secure-password

# SharePoint Configuration
SHAREPOINT_TENANT_ID=your-tenant-id
SHAREPOINT_CLIENT_ID=your-client-id
SHAREPOINT_CLIENT_SECRET=your-client-secret
SHAREPOINT_SITE_ID=your-site-id

# Adobe Creative Cloud Configuration
ADOBE_CLIENT_ID=your-adobe-client-id
ADOBE_CLIENT_SECRET=your-adobe-client-secret
ADOBE_ORG_ID=your-adobe-org-id
ADOBE_TECHNICAL_ACCOUNT_ID=your-technical-account-id
ADOBE_PRIVATE_KEY_PATH=/path/to/private.key

# Monitoring Configuration
MONITORING_WEBHOOK_URL=https://your-monitoring-service.com/webhook
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-key

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# Feature Flags
ENABLE_PLATFORM_VEEVA=true
ENABLE_PLATFORM_SHAREPOINT=true
ENABLE_PLATFORM_ADOBE=true
ENABLE_ASYNC_PROCESSING=true
ENABLE_BATCH_OPERATIONS=true

# Performance Tuning
MAX_CONCURRENT_INTEGRATIONS=10
JOB_PROCESSING_INTERVAL_MS=5000
REQUEST_TIMEOUT_MS=30000
RETRY_MAX_ATTEMPTS=3
RETRY_BACKOFF_MS=1000

# Security
ALLOWED_ORIGINS=https://app.aicomplyr.io,https://admin.aicomplyr.io
JWT_SECRET=your-jwt-secret
API_KEY_HEADER=x-api-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true